<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/motivation_bkg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".presentation.motivation.MotivationFragment">

    <TextView
        android:id="@+id/motivationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:alpha="0.6"
        android:text="Hayat her ne kadar zor gorunce de yapabileceginiz ve basarabileceginiz bir sey her zaman vardir"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/writer_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:text="STEPHEN HAWKING"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>