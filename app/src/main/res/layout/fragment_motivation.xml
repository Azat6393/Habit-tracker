<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color_light"
    tools:context=".presentation.motivation.MotivationFragment">

    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/motivation_bkg"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/motivationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="?attr/secondary_color"
            android:alpha="0.6"
            android:text="Hayat her ne kadar zor gorunce de yapabileceginiz ve basarabileceginiz bir sey her zaman vardir"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/writer_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="?attr/secondary_color"
            android:text="STEPHEN HAWKING"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:layout_weight="3"
        android:paddingBottom="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_wontto_background"/>

    </LinearLayout>

</FrameLayout>